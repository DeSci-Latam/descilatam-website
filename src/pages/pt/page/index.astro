---
import ExampleGrid from "@/components/example-grid";
import PageHeader from "@/components/page-header";
import { navMenuConfig } from "@/config/nav-menu";
import MainLayout from "@/layouts/main-layout";

const examples = navMenuConfig.examplesNav[0].items;
const pages = navMenuConfig.pagesNav[0].items;
---

<MainLayout title="">
  <div class="bg-background-200">
    <section class="container py-12">
      <PageHeader
        heading="Discovery"
        text="Differents pages and examples apps built with Astro v4.5, shadcn/ui & react js. Fully Open Source."
      />

      <ExampleGrid title="Pages" items={pages} />
      <ExampleGrid title="Examples Apps" items={examples} />
    </section>
  </div>
</MainLayout>
