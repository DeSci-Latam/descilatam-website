---
import { DashboardTableOfContents } from "@/components/toc";
import { buttonVariants } from "@/components/ui/button";
import { cn, formatDate } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";
/* import DocsLayout from "./docs-layout.astro"; */
import Base from "@/layouts/Base";
import { Image } from "astro:assets";

type Props = CollectionEntry<"funding"> & { toc: any };
const { title, description, date, cover, website, amount, projectTypes, toc } = Astro.props;
const slug = Astro.props.slug;
---

<Base title={title} description={description}>
  <main class="container max-w-5xl py-6 lg:grid lg:grid-cols-[1fr_300px] lg:gap-10 lg:py-10 xl:gap-20">
    <article class="prose dark:prose-invert max-w-none">
      {cover && <Image src={cover} alt={title} class="rounded-lg mb-6" />}
      <span class="font-medium text-sm text-muted-foreground" transition:name={"date-" + slug}>
        {formatDate(date)}
      </span>
      <h1 class="font-heading text-4xl my-4" transition:name={"title-" + slug}>{title}</h1>
      <p class="text-muted-foreground" transition:name={"desc-" + slug}>{description}</p>
      <div class="my-6">
        <p><strong>Monto:</strong> {amount}</p>
        <p><strong>Tipos de proyectos:</strong> {projectTypes.join(', ')}</p>
        <a href={website} class={cn(buttonVariants({ variant: "outline" }), "mt-2")} target="_blank" rel="noopener noreferrer">
          Visitar sitio web
        </a>
      </div>
      <hr class="my-6" />
      <slot />
      <hr class="flex md:hidden my-4" />
      <div class="flex md:hidden justify-start py-6 lg:py-10">
        <a href="/funding" class={cn(buttonVariants({ variant: "ghost" }))}>
          <Icon name="lucide:chevron-left" class="mr-2 size-4" />
          Ver todas las plataformas
        </a>
      </div>
    </article>
    <div class="hidden text-sm lg:block">
      <div class="sticky top-18 -mt-10 max-h-[calc(var(--vh)-4rem)] overflow-y-auto pt-10" transition:animate="slide">
        <DashboardTableOfContents toc={toc} client:load />
      </div>
    </div>
  </main>
</Base>     